import java.util.ArrayList;
import java.util.Scanner;

public class CafeMain {
	Scanner sc = new Scanner(System.in);
	CafeDao cdao = new CafeDao();
	public CafeMain() {
		init();
	}

	private void init() {
		while(true){
			System.out.println("1.모든 메뉴 조회");
			System.out.println("2.특정 메뉴 조회");
			System.out.println("3.메뉴 추가");
			System.out.println("4.메뉴 수정");
			System.out.println("5.메뉴 삭제");
			System.out.print("메뉴 선택>> ");
			int menu = sc.nextInt();
			switch(menu) {
			case 1:
				ArrayList<CafeBean> lists = cdao.getAllcafe();
				display(lists);
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 6:
				break;
			}
		}
	}

	private void display(ArrayList<CafeBean> lists) {
		System.out.println("번호\t메뉴\t가격\t카페이름\t오픈일");
		for (int i=0;i<lists.size();i+=1) {
			CafeBean cb = lists.get(i);
			System.out.println(cb.getNum()+ "" + cb.getMenu() + "" + cb.getPrice() + "" + cb.getCname() + "" + cb.getOpen_day());
		}
	} // display

	public static void main(String[] args) {
		new CafeMain();
	}

}
